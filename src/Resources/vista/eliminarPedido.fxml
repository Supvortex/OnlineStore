<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="162.0" prefWidth="660.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HelloWorld.controllerFX.EliminarPedidoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
       <TableView fx:id="tblPedidos" prefHeight="503.0" prefWidth="907.0">
           <columns>
               <TableColumn fx:id="colNumeroPedido" prefWidth="114.0" text="Número de pedido" />
               <TableColumn fx:id="colFechaHora" prefWidth="76.0" text="Fecha Hora" />
               <TableColumn fx:id="colNif" prefWidth="62.0" text="NIF" />
               <TableColumn fx:id="colNombre" prefWidth="83.0" text="Nombre" />
               <TableColumn fx:id="colCodigoArticulo" prefWidth="120.0" text="Código Artículo" />
               <TableColumn fx:id="colDescripcionArticulo" prefWidth="149.0" text="Descripción Artículo" />
               <TableColumn fx:id="colCantidad" prefWidth="70.0" text="Cantidad" />
               <TableColumn fx:id="colPrecio" prefWidth="62.0" text="Precio" />
               <TableColumn fx:id="colGastosEnvio" prefWidth="97.0" text="Gastos de envío" />
               <TableColumn fx:id="colTotal" prefWidth="73.0" text="Total" />
           </columns>
       </TableView>
      <Label text="Introduzca el número de pedido a cancelar" />
      <TextField fx:id="txtNumPedido" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#onCickEliminarPedido" text="Eliminar" />
         </children>
      </VBox>
   </children>
</VBox>
